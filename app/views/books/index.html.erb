<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>
<div class="index"><table border="1">
        <tr>
          <th>タイトル</th>
          <th>感想</th>
          <th id="t1" colspan="3">              </th>
        </tr>
        <tr>
        <% @books.each do |book| %>
          <td><span><%= book.title %></span></td>
          <td><span><%= book.body %></span></td>
          <td><%= link_to "show", book_path(book.id)%></td>
          <td><%= link_to "edit", edit_book_path(book.id)%></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
          
        </tr>
        <% end %>
      </table>  
      </div>

      <% if @book.errors.any? %>
      <div id="error_explanation">
      <h2><%= @book.errors.count %> error prohibited this book from being saved</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
     </div>
     <% end %>
  
  <h1>New book</h1>
  <!-- form_with部分 -->
  <%= form_with model: @book,url: '/books',method: :post do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
  <% end %>